{
  "name": "ellie",
  "description": "ellie-app.com",
  "repository": "https://github.com/lukewestby/ellie.git",
  "version": "1.0.0",
  "license": "BSD-3-Clause",
  "cacheDirectories": ["node_modules", "make/0.18.0/node_modules", "make/0.18.0/bower_components"],
  "engines": {
    "node": "6.9.5"
  },
  "dependencies": {
    "autoprefixer": "7.1.4",
    "babel-core": "6.25.0",
    "babel-loader": "7.1.1",
    "babel-plugin-syntax-dynamic-import": "^6.18.0",
    "babel-preset-env": "1.6.0",
    "babel-preset-es2017": "6.24.1",
    "codemirror": "5.27.4",
    "css-loader": "0.28.4",
    "elm": "0.18.0",
    "elm-css": "0.7.0-beta10",
    "elm-format": "0.7.0-exp",
    "elm-test": "0.18.7",
    "elm-webpack-loader": "https://github.com/lukewestby/elm-webpack-loader.git",
    "es6-promise": "4.1.0",
    "extract-text-webpack-plugin": "3.0.0",
    "json-loader": "0.5.4",
    "nodemon": "1.12.1",
    "npm-run-all": "4.1.1",
    "opbeat-js": "^3.1.4",
    "postcss-loader": "2.0.6",
    "string-replace-webpack-plugin": "0.1.3",
    "style-loader": "0.18.2",
    "svg-inline-loader": "0.8.0",
    "webpack": "3.3.0",
    "webpack-dev-server": "2.5.1",
    "webpack-manifest-plugin": "1.1.2"
  },
  "scripts": {
    "elm-css:build": "cd client && elm-css -o elm-stuff/generated-code/rtfeldman/build",
    "elm-css:concat": "find client/elm-stuff/generated-code/rtfeldman/build -name '*.css' | xargs cat > client/elm-stuff/generated-code/rtfeldman/elm-css/output.css",
    "elm-css": "npm run elm-css:build && npm run elm-css:concat",
    "watch:elm-css": "nodemon --exec \"npm run elm-css\" --watch client/css -e elm",
    "watch:webpack": "webpack-dev-server --watch --config ./webpack.dev.config.js",
    "watch": "run-p watch:**",
    "clean": "rm -rf ./build",
    "install:elm": "cd client && elm-package install --yes",
    "clean:elm": "rm -rf ./elm-stuff/build-artifacts/0.18.0/user",
    "build:make:0.18.0": "cd ./make/0.18.0 && npm install && npm run build",
    "build:make": "npm run build:make:0.18.0",
    "build:production": "npm run install:elm && npm run elm-css && webpack --config ./webpack.prod.config.js",
    "deploy": "python ./scripts/deploy_assets.py",
    "heroku-postbuild": "npm test && npm run build:make && npm run build:production && npm run deploy",
    "test:make:0.18.0": "cd ./make/0.18.0 && npm install && npm test",
    "test:make": "npm run test:make:0.18.0",
    "test": "npm run test:make"
  }
}
